@page
@model Task_Management_System.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="User.Username" class="form-label"></label>
        <input asp-for="User.Username" class="form-control" required />
        <span asp-validation-for="User.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="User.Password" class="form-label"></label>
        <input asp-for="User.Password" type="password" class="form-control" required />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="User.ConfirmPassword" class="form-label"></label>
        <input asp-for="User.ConfirmPassword" type="password" class="form-control" required />
        <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
